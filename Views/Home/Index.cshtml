@{
    ViewBag.Title = "Home Page";
}

@section Style{
    <style>
          #gridsearchResult_WaitingPopup{
                display: none !important;
            }
       #custom-search-input{
    padding: 3px;
    border: solid 1px #E4E4E4;
    border-radius: 6px;
    background-color: #fff;
}

#custom-search-input input{
    border: 0;
    box-shadow: none;
}

#custom-search-input button{
    margin: 2px 0 0 0;
    background: none;
    box-shadow: none;
    border: 0;
    color: #666666;
    padding: 0 8px 0 10px;
    border-left: solid 1px #ccc;
}

#custom-search-input button:hover{
    border: 0;
    box-shadow: none;
    border-left: solid 1px #ccc;
}

#custom-search-input .glyphicon-search{
    font-size: 23px;
}

    #gridsearchResult_WaitingPopup{
        display: none;
    }
    </style>
}

@section BodySection{
    <img src="~/Content/Images/QueryFinder.jpg" class="img-fluid" style="max-width:120%;margin-left:-80px" alt="Responsive image">
    <section style="margin-top:-40px">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h2>Query Filter</h2>
                    <div id="custom-search-input">
                        <div class="input-group col-md-12" style="padding-right:0px">
                            <input type="text" class="form-control col-md-11" id="searchtext" placeholder="Search text" />
                            <span class="input-group-btn">
                                <button class="btn btn-info btn-lg" id="searchbutton" type="button" style="border-radius:0px">
                                    <i class="fa fa-search"></i>
                                </button>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="searchresult" style="margin-top:30px;display:none">
                <h4>
                  Search Result
                </h4>
                <div class="result-data">
                    <div id="gridsearchResult">

                    </div>
                </div>
            </div>
        </div>
    </section>

